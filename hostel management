    <script>
        const dropdownMenu = document.getElementById('dropdown-menu');
        document.querySelector('.hamburger').addEventListener('click', () => {
            dropdownMenu.classList.toggle('visible');
        });
        window.addEventListener('click', function(e) {
            if (!dropdownMenu.contains(e.target) && !document.querySelector('.hamburger').contains(e.target) && dropdownMenu.classList.contains('visible')) {
                dropdownMenu.classList.remove('visible');
            }
        });
        document.querySelector('.dark-mode-toggle').addEventListener('click', () => {
            document.body.classList.toggle('dark-mode');
        });

        // Function to show notification with a fade-out
        function showNotification(message) {
             const container = document.querySelector('.container');
             let notification = document.querySelector('.notification');
             if (!notification) {
                 notification = document.createElement('div');
                 notification.classList.add('notification');
                 container.prepend(notification); // Add it to the top of the container
             }
             notification.textContent = message;
             notification.style.display = 'block';
             setTimeout(() => notification.classList.add('visible'), 10); // Start fade in
             setTimeout(() => {
                 notification.classList.remove('visible');
                 // Wait for fade out transition to finish before hiding display
                 setTimeout(() => notification.style.display = 'none', 500);
             }, 3000); // Hide after 3 seconds
        }

        function showSection(sectionId) {
            const currentActiveSection = document.querySelector('.section:not(.hidden)');
            const nextSection = document.getElementById(sectionId);

            if (currentActiveSection && currentActiveSection !== nextSection) {
                // 1. Fade out the current section
                currentActiveSection.classList.add('fading-out');

                // 2. After fade-out, hide it and fade in the next one
                setTimeout(() => {
                    currentActiveSection.classList.add('hidden');
                    currentActiveSection.classList.remove('fading-out');

                    // 3. Prepare the next section for fade-in
                    nextSection.classList.remove('hidden');
                    setTimeout(() => nextSection.style.opacity = '1', 10); // Give a small delay to trigger transition
                }, 300); // Match this with the fading-out transition time
            } else if (currentActiveSection === nextSection) {
                // Do nothing if trying to click the current section
            } else {
                 // First load or if no active section found
                 nextSection.classList.remove('hidden');
                 nextSection.style.opacity = '1';
            }

            dropdownMenu.classList.remove('visible');
        }

        // Initialize: Ensure only home section is visible on load and set opacity to 1
        document.addEventListener('DOMContentLoaded', () => {
             document.querySelectorAll('.section').forEach(s => {
                 if (s.id !== 'home-section') {
                      s.classList.add('hidden');
                 } else {
                      s.style.opacity = '1';
                 }
             });
        });
    </script>

